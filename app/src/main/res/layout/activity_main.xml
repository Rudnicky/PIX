<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawel.arakspix.activitie.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/img_background"
        android:layout_centerHorizontal="true"
        android:id="@+id/backgroundImage" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/img_logo"
        android:id="@+id/logoImageView"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        style="@style/ImageButtonStyle"
        app:srcCompat="@drawable/img_camera"
        android:id="@+id/cameraButton"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/logoImageView"
        android:layout_alignLeft="@+id/galleryButton"
        android:layout_alignStart="@+id/galleryButton" />
    <ImageButton
        style="@style/ImageButtonStyle"
        android:background="@drawable/custom_button"
        app:srcCompat="@drawable/img_gallery"
        android:layout_marginTop="8dp"
        android:id="@+id/galleryButton"
        android:layout_below="@+id/cameraButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
