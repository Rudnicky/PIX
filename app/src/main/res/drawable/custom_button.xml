<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
         <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="2dip" android:color="@color/colorSea" />
            <gradient android:angle="-90" android:startColor="@color/colorDark50Transparency" android:endColor="@color/colorDark50Transparency" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorSea" />
            <solid android:color="@color/colorDark50Transparency" />
         </shape>
    </item>
    <item android:state_enabled="false">
         <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorSea" />
            <gradient android:angle="-90" android:startColor="@color/colorDark50Transparency" android:endColor="@color/colorDark50Transparency" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorSea" />
            <gradient android:angle="-90" android:startColor="@color/colorDark50Transparency" android:endColor="@color/colorDark50Transparency" />
        </shape>
    </item>
</selector>